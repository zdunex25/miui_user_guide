<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/menu_bg">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="vertical" >

            <Button
                android:id="@+id/dismiss"
                android:layout_width="27dip"
                android:layout_height="27dip"
                android:layout_gravity="right"
                android:layout_marginTop="20dip"
                android:layout_marginRight="15dip"
                android:background="@drawable/icon_menu_close_btn" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_marginTop="8dip"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip"
                android:background="#2D000000" />

            <TextView
                android:id="@+id/about_app"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingLeft="25dip"
                android:paddingRight="25dip"
                android:paddingTop="12dip"
                android:paddingBottom="12dip"
                android:background="@drawable/option_text_bg"
                android:text="O Aplikacji" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip"
                android:background="#2D000000" />

            <TextView
                android:id="@+id/about_system"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingLeft="25dip"
                android:paddingRight="25dip"
                android:paddingTop="12dip"
                android:paddingBottom="12dip"
                android:background="@drawable/option_text_bg"
                android:text="O systemie MIUIPolska" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip"
                android:background="#2D000000" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/about_notif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingLeft="25dip"
                    android:paddingTop="12dip"
                    android:paddingBottom="12dip"
                    android:text="Pokazuj powiadomienia" />

                <CheckBox
                    android:id="@+id/checkNotif"
                    android:button="@drawable/checkbox_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dip"
                    android:checked="true" />
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip"
                android:background="#2D000000" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>